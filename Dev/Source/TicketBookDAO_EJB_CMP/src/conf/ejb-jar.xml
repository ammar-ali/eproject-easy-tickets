<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
        <session>
            <display-name>FaqSessionBeanSB</display-name>
            <ejb-name>FaqSessionBean</ejb-name>
            <home>ticketbook.ejb.cmp.FaqSessionBeanRemoteHome</home>
            <remote>ticketbook.ejb.cmp.FaqSessionBeanRemote</remote>
            <ejb-class>ticketbook.ejb.cmp.FaqSessionBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
            <ejb-local-ref>
                <ejb-ref-name>FaqLocalJNDI</ejb-ref-name>
                <ejb-ref-type>Entity</ejb-ref-type>
                <local-home>ticketbook.ejb.cmp.FaqLocalHome</local-home>
                <local>ticketbook.ejb.cmp.FaqLocal</local>
                <ejb-link>Faq</ejb-link>
            </ejb-local-ref>
            </session>
        <entity>
            <description>jdbc:sqlserver://localhost:1433;databaseName=easy_tickets [sa on dbo]</description>
            <display-name>FaqEB</display-name>
            <ejb-name>Faq</ejb-name>
            <local-home>ticketbook.ejb.cmp.FaqLocalHome</local-home>
            <local>ticketbook.ejb.cmp.FaqLocal</local>
            <ejb-class>ticketbook.ejb.cmp.Faq</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.Integer</prim-key-class>
            <reentrant>false</reentrant>
            <abstract-schema-name>Faq</abstract-schema-name>
            <cmp-field>
                <field-name>id</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>question</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>answer</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>createDate</field-name>
            </cmp-field>
            <primkey-field>id</primkey-field>
            <query>
                <query-method>
                    <method-name>findById</method-name>
                    <method-params>
                        <method-param>java.lang.Integer</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(f) FROM Faq AS f WHERE f.id = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findByQuestion</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(f) FROM Faq AS f WHERE f.question = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findByAnswer</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(f) FROM Faq AS f WHERE f.answer = ?1</ejb-ql>
            </query>
            </entity>
        </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>Faq</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>FaqSessionBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        </assembly-descriptor>
    </ejb-jar>
